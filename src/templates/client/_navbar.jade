    .container
      ul
        li(ng-class="{active: $route.current.tabName == 'xrp'}")
          a(href="#/xrp", l10n) Fund
        li(ng-class="{active: $route.current.tabName == 'withdraw'}")
          a(href="#/withdraw", l10n) Withdraw

